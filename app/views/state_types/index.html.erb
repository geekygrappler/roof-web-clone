<p id="notice"><%= notice %></p>

<h1>State Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Metric</th>
      <th>Calculation</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @state_types.each do |state_type| %>
      <tr>
        <td><%= state_type.name %></td>
        <td><%= state_type.metric %></td>
        <td><%= state_type.calculation %></td>
        <td><%= state_type.description %></td>
        <td><%= link_to 'Show', state_type %></td>
        <td><%= link_to 'Edit', edit_state_type_path(state_type) %></td>
        <td><%= link_to 'Destroy', state_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

