<div class="admin-spec-wrapper">
  <table class="table-light bg-white">
    <thead class="bg-darken-1">
    <tr>
      <td>Document Address</td>
      <td>Architect Name</td>
      <td>Architect Id</td>
      <td></td>
    </tr>
    </thead>
    <tbody>
    <% @architects.each do |architect| %>
        <tr>
          <td><%= architect.address_1 %></td>
          <td><%= architect.name %></td>
          <td><%= architect.id %></td>
          <td><%= link_to 'View', admin_document_path(architect.documents.last) %></td>
          <td><%= link_to "Delete", destroy_architect_path(architect), method: :delete, remote: true, data: { confirm: 'Are you certain you want to delete this?' } %></td>
        </tr>
    <% end %>
    </tbody>

  </table>
</div>